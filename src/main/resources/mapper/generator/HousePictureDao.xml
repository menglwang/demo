<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xunwu.frist.demo.dao.HousePictureDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.xunwu.frist.demo.entity.HousePictureEntity" id="housePictureMap">
        <result property="id" column="id"/>
        <result property="houseId" column="house_id"/>
        <result property="cdnPrefix" column="cdn_prefix"/>
        <result property="width" column="width"/>
        <result property="height" column="height"/>
        <result property="location" column="location"/>
        <result property="path" column="path"/>
    </resultMap>

	<select id="queryObject" resultType="com.xunwu.frist.demo.entity.HousePictureEntity">
		select * from house_picture where id = #{value}
	</select>

	<select id="queryList" resultType="com.xunwu.frist.demo.entity.HousePictureEntity">
		select * from house_picture
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from house_picture 
	</select>
	 
	<insert id="save" parameterType="com.xunwu.frist.demo.entity.HousePictureEntity" useGeneratedKeys="true" keyProperty="id">
		insert into house_picture
		(
			`house_id`, 
			`cdn_prefix`, 
			`width`, 
			`height`, 
			`location`, 
			`path`
		)
		values
		(
			#{houseId}, 
			#{cdnPrefix}, 
			#{width}, 
			#{height}, 
			#{location}, 
			#{path}
		)
	</insert>
	 
	<update id="update" parameterType="com.xunwu.frist.demo.entity.HousePictureEntity">
		update house_picture 
		<set>
			<if test="houseId != null">`house_id` = #{houseId}, </if>
			<if test="cdnPrefix != null">`cdn_prefix` = #{cdnPrefix}, </if>
			<if test="width != null">`width` = #{width}, </if>
			<if test="height != null">`height` = #{height}, </if>
			<if test="location != null">`location` = #{location}, </if>
			<if test="path != null">`path` = #{path}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from house_picture where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from house_picture where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>